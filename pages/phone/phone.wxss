/* pages/phone/phone.wxss */
.container {
    width: 720rpx;
     height: 130vh;
    display: flex;
    flex-direction: column;
    margin: -100px auto;
}
video {
    width: 100vw; 
    height: 400rpx;
    background-color: #000;
}
.info {
    flex: 1;
    width: 720rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
map {
    width: 100%;
    height: 400rpx;
}

.info-item {
    line-height: 80rpx;
    display: flex;
    border-bottom: 1px solid #ccc;
}

.info-item text:first-child {
    flex: 1;
}

.info-item text:last-child {
    flex: 2;
}
.btn{
    width: 150rpx;
    height: 60rpx;
    border-radius: 5px;
    background-color: green;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
}